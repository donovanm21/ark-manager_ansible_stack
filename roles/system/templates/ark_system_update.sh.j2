## DO NOT EDIT THIS FILE
## THIS IS THE MAIN UPDATE CHECK AND ACTION FILE FOR ALL THE MAPS

# Send server message for pending restart
/usr/local/bin/arkmanager broadcast "Server restart in 10 mins, server update required" @all
sleep 5m
/usr/local/bin/arkmanager broadcast "Server restart in 5 mins, server update required" @all
sleep 5m
/usr/local/bin/arkmanager broadcast "Server restart in 1 min, server update required" @all
sleep 1m

# Stop all running maps
/usr/local/bin/arkmanager stop @all

# Update the ark engine on the host
/usr/local/bin/arkmanager update
sleep 5

# Check for mod updates post system update
/usr/local/bin/arkmanager update --update-mods

# Start Configured Maps
{% for item in maps %}
# {{ item.map_name }} restart command
/usr/local/bin/arkmanager start @{{ item.map_name }}
sleep 30
{% endfor %}
